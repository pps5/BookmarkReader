<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/entries_fragment">

    <fragment
        android:id="@+id/entries_fragment"
        android:name="io.github.pps5.bookmarkreader.feature.entries.EntriesFragment">

        <action
            app:enterAnim="@anim/slide_from_right"
            app:exitAnim="@anim/slide_to_left"
            app:popEnterAnim="@anim/slide_from_left"
            app:popExitAnim="@anim/slide_to_right"
            android:id="@+id/action_to_webview_fragment"
            app:destination="@id/webview_fragment" />

    </fragment>

    <fragment
        android:id="@+id/webview_fragment"
        android:name="io.github.pps5.bookmarkreader.feature.entries.fragment.WebViewFragment">

        <argument
            android:name="url"
            app:argType="string" />
    </fragment>
</navigation>